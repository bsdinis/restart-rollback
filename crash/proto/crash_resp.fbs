include "crash.fbs";

namespace paxos_sgx.crash;

table ClientGetResult {
    account : int64;
    amount  : int64;
    success : bool;
}

table ReplicaGetResult {
    account : int64;
    amount  : int64;
    last_applied : int64;
    success : bool;
}

table PingResult { }

union Result {
    ClientGetResult,
    ReplicaGetResult,
    PingResult,
}

table BasicResponse {
    type    : ReqType;
    ticket  : int64;
    result  : Result;
}

root_type BasicResponse;
